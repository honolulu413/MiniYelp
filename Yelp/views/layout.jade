doctype html
html
  head
    meta(charset='utf-8')
    title Jade - Template Engine
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href="/public/stylesheets/bootstrap.css")
    link(rel='stylesheet', href='/public/stylesheets/codemirror.css')
    link(rel='stylesheet', href='/public/stylesheets/all.css')
    link(rel='stop',href='/public/images/tile.png')
    link(rel='stop',href='/public/images/top.png')
    link(rel='stop',href='/public/images/logo.png')
    include ./includes/stability.jade
    mixin jade
      pre.cm-s-default(data-control='input-jade')
        code
          block
    mixin html
      pre.cm-s-default(data-control='output-html')
        code
          block
    mixin js
      pre.cm-s-default(data-control='input-js')
        code
          block
  body
    include ./includes/ribbon.jade
    #container
      include ./includes/header.jade
      block content
      include ./includes/footer.jade
    script(src='/client.js')
    include ./includes/ga.jade