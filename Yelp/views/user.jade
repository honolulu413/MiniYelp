block content  
  panel.panel-danger(style = "margin-bottom: 10px;")
    .panel-heading
      .panel-title 
        a#search Search a Business
    .page-body
      form(method='get', action='/business_list')
        label() Business Name: 
        br
        input(type='text', name='name', value='')
        br
        label() City: 
        br
        input(type='text', name='city', value='')
        br
        label() State: 
        br
        input(type='text', name='state', value='')
        br
        button.btn.btn-primary(type='submit',style = "margin-bottom: 10px;") Search
  // Put a click button that lets us return to the index page 

  //Favorite Businesses
  .panel.panel-info(style = "margin-bottom: 10px;")
    .panel-heading
      .panel-title 
        a#favourites Favorites
    .page-body
      table.table.table-striped
        thead
          tr
            th Name
            th City
            th star
        - for (var i = 0; i < business_list.length; i++)
          tbody
            tr
              - for (var key in business_list[i])
                td #{key}  #{business_list[i][key]}
              td 
                a(href='/business/' + business_list[i]["BUSINESS_ID"]) details