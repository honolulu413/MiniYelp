// Jade file to specify output of an actors list
// Inherits from layout
extend layout
block left
  panel.panel-success(style = "margin-bottom: 10px;")
    .panel-heading
      .panel-title 
        a#account #{title}
    .page-body
    ul
      - for (var key in current_user)
        li #{key}  #{current_user[key]}

      br   
    form(method='get', action='/logout',)
      button.btn.btn-primary(type='submit',style = "margin-bottom: 10px;") Log out
   
  panel.panel-danger(style = "margin-bottom: 10px;")
    .panel-heading
      .panel-title 
        a#friends Start a Party
    .page-body
      form(method='post', action='/invite')
        ul.list-group
          - for (var i = 0; i < friends_list.length; i++)
            li.list-group-item 
              | #{friends_list[i].LAST_NAME} &nbsp #{friends_list[i].FIRST_NAME} 
              a(href='/user/' + friends_list[i]["USER_NAME_ID"]) details &nbsp
              input(type='checkbox', name='friends_list', value=friends_list[i]["USER_NAME_ID"])
          
        //input(type='hidden', name='friends_list', value='#{current_user["USER_NAME_ID"]}')
        button.btn.btn-primary(type='submit',style = "margin-bottom: 10px;") Invite friends to party!

  //Similar User
  panel.panel-success(style = "margin-bottom: 10px;")
    .panel-heading
      .panel-title 
        a#acquaintance People you may know
    .page-body
    ul.list-group
      - for (var i = 0; i < similar_user.length; i++)        
        li.list-group-item
          li.list-group-item-text
            ul
              - for (var key in similar_user[i])
                li #{key}  #{similar_user[i][key]}

