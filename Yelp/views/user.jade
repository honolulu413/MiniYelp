// Jade file to specify output of an actors list
// Inherits from layout
extend layout

block content
    p
      | #{title}:
  // Create a table with one row per result
      table
        tr
          - for (var key in user)
          td #{key}  #{user[key]}
          td &nbsp;
        br
      form(method='get', action='/logout')
      input(type='submit', value='Logout')
      
    p
      | Search Business:
      br
    form(method='get', action='/business_list')
      label() Business Name: 
      br
      input(type='text', name='name', value='')
      br
      label() City: 
      br
      input(type='text', name='city', value='')
      br
      label() State: 
      br
      input(type='text', name='state', value='')
      br
      input(type='submit', value='Search')
      // Put a click button that lets us return to the index page 
      
      
//Favorite Businesses
      p
        | Favorite Businesses:
      - for (var i = 0; i < business_list.length; i++)
        // Create a table with one row per result
        table
          tr
          - for (var key in business_list[i])
            td #{key}  #{business_list[i][key]}
            td &nbsp;
            br
        a(href='/business/' + business_list[i]["BUSINESS_ID"]) details
        br
    
  
 
